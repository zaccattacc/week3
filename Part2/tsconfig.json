{
  "extends": "@tsconfig/node14/tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "noImplicitAny": false,
    "declaration": true,
    "moduleResolution": "node",
    "module": "es2020",
    "target": "esnext",
    "types": [
      "node",
      "jest",
    ],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}